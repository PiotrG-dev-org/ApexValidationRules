    <label>Apex Validation Rule</label>
    <listViews>
        <fullName>All</fullName>
        <columns>MasterLabel</columns>
        <columns>DeveloperName</columns>
        <columns>SObjectType__c</columns>
        <columns>IsActive__c</columns>
        <columns>CriteriaLogicType__c</columns>
        <columns>CustomCriteriaLogic__c</columns>
        <columns>ErrorMessage__c</columns>
        <filterScope>Everything</filterScope>
        <label>All</label>
        <language>en_US</language>
    </listViews>
    <pluralLabel>Apex Validation Rules</pluralLabel>
    <validationRules>
        <fullName>CustomCriteriaLogicRequired</fullName>
        <active>true</active>
        <errorConditionFormula>AND(
   ISPICKVAL(CriteriaLogicType__c, &apos;Custom&apos;),
   ISBLANK(CustomCriteriaLogic__c)
)</errorConditionFormula>
        <errorDisplayField>CustomCriteriaLogic__c</errorDisplayField>
        <errorMessage>Custom Criteria Logic is required when Criteria Logic Type = &apos;Custom Logic&apos;</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>InvalidCustomCriteriaLogicUsage</fullName>
        <active>true</active>
        <errorConditionFormula>AND(
  NOT(ISPICKVAL(CriteriaLogicType__c, &apos;Custom&apos;)),
  NOT(ISBLANK(CustomCriteriaLogic__c))
)</errorConditionFormula>
        <errorDisplayField>CustomCriteriaLogic__c</errorDisplayField>
        <errorMessage>Custom Criteria Logic can only be populated when Criteria Logic = &apos;Custom&apos;</errorMessage>
    </validationRules>
    <visibility>Public</visibility>
</CustomObject>
