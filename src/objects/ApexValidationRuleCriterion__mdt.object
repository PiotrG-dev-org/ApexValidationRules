    <label>Apex Validation Rule Criterion</label>
    <pluralLabel>Apex Validation Rule Criteria</pluralLabel>
    <validationRules>
        <fullName>Reference_Field_Path_Invalid</fullName>
        <active>true</active>
        <errorConditionFormula>AND(
  LEFT(Field__r.DataType, 6) != &apos;Lookup&apos;,
  NOT(ISBLANK(ParentFieldPath__c))
)</errorConditionFormula>
        <errorDisplayField>ParentFieldPath__c</errorDisplayField>
        <errorMessage>Reference Field Path can only be used for Lookup &amp; Master/Detail relationship fields</errorMessage>
    </validationRules>
    <validationRules>
        <fullName>SObjectTypesMismatch</fullName>
